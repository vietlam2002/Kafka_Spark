set nocompatible
set showmatch
set nohls
set ruler

set tabstop=4
set shiftwidth=4
set expandtab

set ts=2
set shiftwidth=2
set smarttab

set ignorecase
set smartcase
set nowrap
set nonumber
set encoding=utf-8
set fileencoding=utf-8

set t_Co=16
let g:solarized_termcolors=16

filetype plugin indent on
colorscheme slate
syntax on
